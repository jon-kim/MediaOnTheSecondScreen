<Window x:Class="MediaOnOtherScreen.windowDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="windowDisplay" 
        Height="768" Width="1024" ShowInTaskbar="False" ShowActivated="False"
        WindowStartupLocation="Manual" WindowStyle="None"
        AllowsTransparency="True" Background="Black"
        Loaded="Window_Loaded">
    <Border Background="Black">
        <Image Name="image" Stretch="Uniform" />
    </Border>
</Window>